{
    "version": "2.0.0",
    "type": "shell",
    "problemMatcher": [],
    "tasks": [
        {
            "label": "cmake generate",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build"
            ]
        },
        {
            "label": "cmake build",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ]
        },
        {
            "label": "build",
            "dependsOn": ["cmake generate", "cmake build"],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
              }
        },
        {
            "label": "clean",
            "command": "rm -rf ${workspaceFolder}/build"
        },
        {
            "label": "run",
            "command": "${workspaceFolder}/build/${workspaceRootFolderName}",
            "dependsOn": ["build"]
        }
    ]
}